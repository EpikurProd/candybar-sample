<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingTranslation">
    
    <!-- Sort
    * Enable or disable icons sort
    * Disabling this will improve icons section performance, icons will load faster
    * You can use CandyBar Icons Builder to generate drawable.xml that already sorted alphabetically
    * Enable -> true
    * Disable -> false -->
    <bool name="enable_icons_sort">true</bool>

    <!-- Icon picker thumbnail size
    * default: 58dp -->
    <dimen name="icon_thumb_size">58dp</dimen>

    <!-- Icon picker column width
    * 16dp + icon_thumb_size (above) + 16dp
    * Example: icon_thumb_size = 48dp
    * 16dp + 48dp + 16dp = 80dp
    * icon_picker_column_width = 80dp
    * Now: 16dp  + 58dp + 16dp = 90dp -->
    <dimen name="icon_picker_column_width">90dp</dimen>

    <!-- Icon picker icon name text below icon
    * default: true
    * Change to false to disable it -->
    <bool name="show_icon_name">true</bool>

    <!-- Icons section will read icons from drawable.xml same as Nova Launcher
    * Put drawable.xml inside xml folder -->

</resources>
